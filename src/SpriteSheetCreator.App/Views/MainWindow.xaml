<Window x:Class="SpriteSheetCreator.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:SpriteSheetCreator.App.ViewModels"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:models="clr-namespace:SpriteSheetCreator.Core.Models;assembly=SpriteSheetCreator.Core"
        mc:Ignorable="d"
        Title="Sprite Sheet Creator" Height="700" Width="1000"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel}">
    <Window.Resources>
        <ObjectDataProvider x:Key="DirectionValues" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:Direction"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="OutputFormatValues" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:OutputFormat"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <Border Grid.Row="0" Padding="10" Background="#F0F0F0">
            <StackPanel Orientation="Horizontal">
                <Button Content="打开文件夹" Command="{Binding OpenFolderCommand}" Padding="15,5" Margin="0,0,10,0"/>
                <Button Content="导出精灵图" Command="{Binding ExportCommand}" Padding="15,5"/>
                <TextBlock Text="{Binding CurrentFolderPath}" VerticalAlignment="Center" Margin="15,0,0,0" Foreground="Gray" TextTrimming="CharacterEllipsis"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Preview Area -->
            <Border Grid.Column="0" Background="#2D2D30" Margin="5" CornerRadius="5">
                <Grid>
                    <Image Source="{Binding Preview.CurrentFrame}" 
                           Stretch="Uniform" 
                           RenderOptions.BitmapScalingMode="NearestNeighbor"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    
                    <TextBlock Text="暂无预览" Foreground="#888" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Visibility="{Binding Preview.CurrentFrame, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}"/>
                </Grid>
            </Border>

            <!-- Controls Area -->
            <ScrollViewer Grid.Column="1" Margin="5" VerticalScrollBarVisibility="Auto">
                <StackPanel DataContext="{Binding Controls}">
                    
                    <!-- Layout Config -->
                    <GroupBox Header="网格布局" Margin="0,0,0,10" Padding="5">
                        <StackPanel>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="列数 (Columns):" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding Columns, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Margin="10,0,0,0"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="行数 (Rows):" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding Rows, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Margin="10,0,0,0"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="起始帧索引:" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding StartFrame, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Margin="10,0,0,0"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>

                    <!-- Crop Config -->
                    <GroupBox Header="裁剪设置 (边距)" Margin="0,0,0,10" Padding="5">
                        <StackPanel>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Text="上 (Top):" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding MarginTop, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1" Margin="5,0,5,5"/>
                                
                                <TextBlock Text="下 (Bottom):" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding MarginBottom, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="3" Margin="5,0,0,5"/>
                                
                                <TextBlock Text="左 (Left):" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding MarginLeft, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1" Margin="5,0,5,0"/>
                                
                                <TextBlock Text="右 (Right):" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding MarginRight, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="3" Margin="5,0,0,0"/>
                            </Grid>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                <TextBlock Text="结果尺寸: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding CroppedWidth}" VerticalAlignment="Center" FontWeight="Bold"/>
                                <TextBlock Text=" x " VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding CroppedHeight}" VerticalAlignment="Center" FontWeight="Bold"/>
                                <Button Content="重置裁剪" Command="{Binding ResetCropCommand}" Padding="10,2" Margin="15,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- Animation Config -->
                    <GroupBox Header="动画预览" Margin="0,0,0,10" Padding="5">
                        <StackPanel>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="帧率 (FPS):" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding FrameRate, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Margin="10,0,0,0"/>
                            </Grid>
                            <CheckBox Content="循环播放" IsChecked="{Binding IsLooping}" Margin="0,5"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Export Config -->
                    <GroupBox Header="导出设置" Margin="0,0,0,10" Padding="5">
                        <StackPanel>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="格式:" VerticalAlignment="Center"/>
                                <ComboBox ItemsSource="{Binding Source={StaticResource OutputFormatValues}}" 
                                          SelectedItem="{Binding OutputFormat}" Grid.Column="1" Margin="10,0,0,0"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    
                    <Button Content="重置所有设置" Command="{Binding ResetDefaultsCommand}" Margin="0,10" Padding="5"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="2" Background="#AA000000" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="处理中..." Foreground="White" FontSize="24" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
